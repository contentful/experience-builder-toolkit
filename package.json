{
  "name": "experience-builder-components",
  "version": "1.0.0",
  "description": "",
  "homepage": "https://github.com/contentful/experience-builder-components#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/contentful/experience-builder-components.git"
  },
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev": "npm run dev --prefix ./packages/test-app",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "test:component": "npm run test:component --workspaces --if-present",
    "storybook": "npm run storybook --prefix ./packages/components",
    "build-storybook": "npm run storybook --prefix component -- build"
  },
  "author": "",
  "license": "ISC",
  "workspaces": [
    "packages/components",
    "packages/test-app",
    "packages/create-experience-builder"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "husky": "^8.0.3",
    "lerna": "^7.3.0",
    "lint-staged": "^14.0.1"
  },
  "lint-staged": {
    "*.{t,j}s?(x)": [
      "npm run lint:fix"
    ],
    "*.{json,yml,html}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@types/prompts": "^2.4.5",
    "prompts": "^2.4.2"
  }
}
